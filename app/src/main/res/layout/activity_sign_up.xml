<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    tools:context=".SignUpActivity">

    <android.support.v7.widget.CardView
        android:layout_margin="20dp"
        app:cardCornerRadius="13dp"
        app:cardElevation="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView
        android:background="#EB213A"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/signup_gradient"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/sign_up" />

            <EditText
                android:id="@+id/signUpFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/signupedittextstyle"
                android:drawableLeft="@drawable/ic_name"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Full name"
                android:inputType="textPersonName"
                android:padding="12dp" />

            <EditText
                android:id="@+id/signUpEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/signupedittextstyle"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="@string/Email"
                android:inputType="textEmailAddress"
                android:padding="12dp" />

            <EditText
                android:id="@+id/signUpPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/signupedittextstyle"
                android:drawableLeft="@drawable/ic_phone"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Phone Number"
                android:inputType="number"
                android:padding="12dp" />


            <EditText
                android:id="@+id/signUpPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/signupedittextstyle"
                android:drawableLeft="@drawable/ic_pass"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="12dp" />

            <EditText
                android:id="@+id/signUpRePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/signupedittextstyle"
                android:drawableLeft="@drawable/ic_pass"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Re-Type Password"
                android:inputType="textPassword"
                android:padding="12dp" />

            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:background="@drawable/signupscreenbuttonstyle"
                android:text="Sign Up" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/progress"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="182dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:indeterminateTint="@color/colorAzure"
                    android:textAlignment="center"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/alreadyUserTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/alreadyUser"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />
            </LinearLayout>


        </LinearLayout>
</ScrollView>
    </android.support.v7.widget.CardView>
    </LinearLayout>